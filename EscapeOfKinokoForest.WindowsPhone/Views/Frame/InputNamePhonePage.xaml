                                        </Storyboard>
                                    </VisualState>
                                    <VisualState x:Name="Unfocused"/>
                                    <VisualState x:Name="PointerFocused"/>
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>
                            <Border x:Name="Border" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}" Margin="3">
                                <ContentPresenter x:Name="ContentPresenter" ContentTemplate="{TemplateBinding ContentTemplate}" ContentTransitions="{TemplateBinding ContentTransitions}" Content="{TemplateBinding Content}" HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" Margin="{TemplateBinding Padding}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                            </Border>
                            <Rectangle x:Name="FocusVisualWhite" IsHitTestVisible="False" Opacity="0" StrokeDashOffset="1.5" StrokeEndLineCap="Square" Stroke="{StaticResource FocusVisualWhiteStrokeThemeBrush}" StrokeDashArray="1,1"/>
                            <Rectangle x:Name="FocusVisualBlack" IsHitTestVisible="False" Opacity="0" StrokeDashOffset="0.5" StrokeEndLineCap="Square" Stroke="{StaticResource FocusVisualBlackStrokeThemeBrush}" StrokeDashArray="1,1"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Storyboard x:Name="Storyboard1">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Opacity)" Storyboard.TargetName="inputCompleteButton">
                <EasingDoubleKeyFrame KeyTime="0" Value="0"/>
                <EasingDoubleKeyFrame KeyTime="0:0:2" Value="0"/>
                <EasingDoubleKeyFrame KeyTime="0:0:4" Value="1"/>
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Opacity)" Storyboard.TargetName="announceText">
                <EasingDoubleKeyFrame KeyTime="0" Value="0"/>
                <EasingDoubleKeyFrame KeyTime="0:0:2" Value="1"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
    </Page.Resources>

    <Grid x:Name="stage">
        <Grid.Background>
            <ImageBrush ImageSource="ms-appx:///Assets/bg.jpg"/>
        </Grid.Background>

        <Viewbox>
            <Canvas Width="1920" Height="1080">
                <StackPanel Orientation="Vertical"  Width="1920" Height="1080">
                    <TextBlock x:Name="announceText" Height="91" FontSize="36" Margin="120,30,104,0" Foreground="#FF604C3D" HorizontalAlignment="Center" Width="1696" TextAlignment="Center" >
                    	<Run Text="名前を入力してください。"/>
                    	<Run Text="（9文字まで）"/>
                    	<LineBreak/>
                    	<Run Text=" 入力後は「入力おわり」を押してください。"/>
                    </TextBlock>

                    <TextBox Height="120" Width="600" x:Name="nameTextBox" FontSize="48"/>
                    
                    <Button x:Name="inputCompleteButton" Content="" HorizontalAlignment="Center" Width="400" Height="100" VerticalAlignment="Bottom" Margin="650,0,646,30" Click="inputCompleteButton_Click" Style="{StaticResource ButtonStyle}" >
                        <Button.Background>
                            <ImageBrush ImageSource="ms-appx:///Assets/InputName/nameBtnInput.png"/>
                        </Button.Background>
                    </Button>
                    <StackPanel Orientation="Horizontal" Margin="573,0,335,300" Height="122">
                        <Button x:Name="nameOKButton" Content="" HorizontalAlignment="Center" Width="400" Height="100" VerticalAlignment="Bottom" Margin="0,0,0,30" Click="nameOKButton_Click" Style="{StaticResource ButtonStyle1}" Visibility="Collapsed"  >
                            <Button.Background>
                                <ImageBrush ImageSource="ms-appx:///Assets/InputName/nameBtnNext.png"/>
                            </Button.Background>
                        </Button>
                        <Button x:Name="nameNGButton" Content="" HorizontalAlignment="Center" Width="400" Height="100" VerticalAlignment="Bottom" Margin="0,0,0,30" Click="nameNGButton_Click" Style="{StaticResource ButtonStyle2}" Visibility="Collapsed"  >
                            <Button.Background>
                                <ImageBrush ImageSource="ms-appx:///Assets/InputName/nameBtnBack.png"/>
                            </Button.Background>
                        </Button>
                    </StackPanel>

                </StackPanel>
            </Canvas>
        </Viewbox>
    </Grid>
</Page>